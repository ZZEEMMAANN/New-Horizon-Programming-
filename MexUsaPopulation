import java.util.Scanner;

public class MexicoUSAPopulation
{
    public static void main( String args[] )
    {
        Scanner input = new Scanner(System.in);
        System.out.println("Mexicos population is 58,000,000 in the year 1994");
        System.out.println("Americas population is 260,000,000 in the year 1994");
      
        int year = 0;
 

        double mexpopulation = 58, amepopulation = 260;
        //while(mexpopulation <= amepopulation)
        //for(int mexpopulation = 0;  amepopulation = 0; mexpopulation < amepopultion)
        while (year++ < 32)
        {
            mexpopulation *= 1.07;
            amepopulation *=  1.02;

            System.out.println("Americas population has gone up to " + amepopulation + " In year " + year );
            System.out.println("Mexico population has gone up to " + mexpopulation + " In year " + year );
        }
    }

}
