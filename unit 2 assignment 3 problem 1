import java.util.Scanner;

public class unit2prob1
{
    public static void main( String args[] )
       {
        Scanner input = new Scanner(System.in);
        int odd = 0;
            int even = 0;
        
        for ( int i = 1; i <= 5; i= i+1)
        {
            System.out.println ("Input Value: ");
            int num = input.nextInt();
            
            
            
            if (num % 2== 0)// if remainder when divided by 2 is 0
            {
            System.out.println (num + " is even ");
             even = num + even;
            
            }
            else // if remainder when divided by 2 is 1
            {
            System.out.println (num + " is odd ");
            odd = num + odd;
            
             }
        }
        System.out.println ("Sum of all even numbers is " + even);
        System.out.println ("Sum of all odd numbers is " + odd  );
   } 
   
}
