import java.util.Scanner;
 
 public class ProductOfEven
 {
     public static void main( String args[] )
        {
         Scanner input = new Scanner(System.in);
         int odd = 1;
             int even = 1;
         
         for ( int i = 1; i <= 3; )
         {
             System.out.println ("Input Value: ");
             int num = input.nextInt();
             
             
            
             if (num % 2== 0)// if remainder when divided by 2 is 0
             {
             System.out.println (num + " is even ");
              even = num * even;
              i= i+1;
              
             
             }
             else // if remainder when divided by 2 is 1
             {
             System.out.println (num + " is odd ");
             odd = num * odd;
             
             }
        }
        System.out.println ("Product of all even numbers is " + even);
         System.out.println ("Product of all odd numbers is " + odd  );
    } 
    
 }
